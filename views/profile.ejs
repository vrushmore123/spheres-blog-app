<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile Page</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="min-h-screen bg-gray-100">
  <header class="bg-white shadow">
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold text-gray-900">Profile Page</h1>
      <a href="#" class="text-gray-500 hover:text-gray-700 text-right float-right   text-sm font-bold py-0 ">About</a>
    </div>  
  </header>
  <main>
    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <div class="px-4 py-6 sm:px-0">
        <div class="rounded-lg bg-white p-6 shadow-lg">
          <div class="flex items-center space-x-4">
            <img
              class="h-24 w-24 rounded-full"
              src="http://surl.li/qgtfbu"
              alt="Profile"
            />
            <div>
              <h2 class="text-2xl font-bold text-gray-900">John Doe</h2>
              <p class="text-gray-600">Photographer & Designer</p>
            </div>
          </div>
        </div>
      </div>
      <form action="/upload" method="POST" enctype="multipart/form-data">
        <input class="bg-slate-600 p-2 rounded-xl font-medium text-lg" type="text" name="filecaption" placeholder="some caption">
        <input type="file" name="file" class="font-medium mx-5">
        <button type="submit" class=" px-3 py-3 m-2 mx-auto rounded-xl bg-blue-500 text-white
        ">Upload</button>
      </form>
      </div>
    </div>
    
  </main>


  <!-- cards -->



  <div class="container mx-auto ">
    <div class="cards max-w-7xl mx-auto  flex space-x-3">
      <% user.posts.forEach(function(post){%>
        <div class="bg-white rounded-xl shadow-md overflow-hidden  ">
          <div class="flex flex-col md:flex-row">
              <div class="md:flex-shrink-0">
                  <img class="w-full object-cover md:h-full md:w-48" src="/images/uploads/<%= post.image %>" alt="Placeholder image">
              </div>
              <div class="p-7 flex flex-col justify-between">
                  <div>
                      <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold">Card Title</div>
                      <a href="#" class="block mt-1 text-lg leading-tight font-medium text-black hover:underline">Main Heading</a>
                  </div>
                  <button class="mt-4 bg-indigo-500 text-white px-4 py-2 rounded hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Read More</button>
              </div>
          </div>
      </div>


      
      <%})%>
</div>
  </div>

  
</body>
</html>
